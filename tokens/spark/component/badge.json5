{
  "component": {
    "badge": {
      "font-size": { "value": "{size.font.action.callout.value}" },
      "border-radius": { "value": "{size.border.radius.md.value}" },
      "color": { "value": "{color.brand.feedback.onInfo.value}" },
      "background-color": { "value": "{color.brand.feedback.info.value}" },
      "padding-vertical": { "value": "{size.padding.sm.value}" },
      "padding-horizontal": { "value": "{size.padding.md.value}" },

      "variant": {
        "error": {
          "color": { "value": "{color.brand.feedback.onError.value}" },
          "background-color": { "value": "{color.brand.feedback.error.value}" }
        },
        "alert": {
          "color": { "value": "{color.brand.feedback.onAlert.value}" },
          "background-color": { "value": "{color.brand.feedback.alert.value}" }
        },
        "success": {
          "color": { "value": "{color.brand.feedback.onSuccess.value}" },
          "background-color": {
            "value": "{color.brand.feedback.success.value}"
          }
        }
      }
    }
  }
}
