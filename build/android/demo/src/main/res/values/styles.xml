<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_brand_primary_primary</item>
        <item name="colorPrimaryDark">@color/color_brand_primary_primary</item>
        <item name="colorAccent">@color/color_brand_secondary_secondary</item>
        <item name="colorSecondary">@color/color_brand_secondary_secondary</item>
        <item name="colorOnPrimary">@color/color_brand_primary_on_primary</item>
        <item name="colorOnSurface">@color/color_brand_base_on_surface</item>
        <item name="colorSurface">@color/color_brand_base_surface</item>
        <item name="colorPrimarySurface">@color/color_brand_primary_primary</item>
        <item name="android:colorBackground">@color/color_brand_base_background</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_border_radius_md</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_border_radius_lg</item>
    </style>

    <style name="DTPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/component_button_primary_background_color</item>
        <item name="android:textColor">@color/component_button_primary_color</item>
        <item name="android:padding">@dimen/component_button_padding</item>
        <item name="android:textSize">@dimen/component_button_font_size</item>
        <item name="cornerRadius">@dimen/component_button_border_radius</item>
    </style>

    <style name="DTSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/component_button_secondary_background_color</item>
        <item name="strokeColor">@color/component_button_secondary_border_color</item>
        <item name="strokeWidth">@dimen/component_button_secondary_border_width</item>
        <item name="android:padding">@dimen/component_button_padding</item>
        <item name="android:textSize">@dimen/component_button_font_size</item>
        <item name="android:textColor">@color/component_button_secondary_color</item>
        <item name="cornerRadius">@dimen/component_button_border_radius</item>
    </style>

    <style name="DTBadge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:paddingHorizontal">@dimen/component_badge_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/component_badge_padding_vertical</item>
        <item name="android:textColor">@color/component_badge_color</item>
        <item name="chipBackgroundColor">@color/component_badge_background_color</item>
    </style>

    <style name="DTBadge.Success">
        <item name="android:textColor">@color/component_badge_variant_success_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_success_background_color</item>
    </style>

    <style name="DTBadge.Alert">
        <item name="android:textColor">@color/component_badge_variant_alert_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_alert_background_color</item>
    </style>

    <style name="DTBadge.Error">
        <item name="android:textColor">@color/component_badge_variant_error_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_error_background_color</item>
    </style>
</resources>