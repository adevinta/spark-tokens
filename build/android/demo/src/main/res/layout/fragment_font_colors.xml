<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FontColorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_padding_2xl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_main_main" />
            <TextView
                android:id="@+id/font_color_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_main_main"
                android:text="Main"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_support_support" />
            <TextView
                android:id="@+id/font_color_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_support_support"
                android:text="Support"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_feedback_success" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_feedback_success"
                android:text="Success"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_feedback_alert" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_feedback_alert"
                android:text="Alert"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_feedback_error" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_feedback_error"
                android:text="Error"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_feedback_info" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_feedback_info"
                android:text="Info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_md"
                android:textColor="@color/color_brand_feedback_neutral" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_feedback_neutral"
                android:text="Neutral"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>