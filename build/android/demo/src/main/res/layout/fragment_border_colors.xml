<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BorderColorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_padding_md"
        android:paddingTop="@dimen/size_padding_md"
        android:paddingBottom="@dimen/size_padding_2xl">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_primary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Primary"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_secondary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Secondary"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_success">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Success"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_alert">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Alert"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_error">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Error"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_info">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Info"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_md"
            app:strokeWidth="@dimen/size_border_width_md"
            app:strokeColor="@color/color_brand_neutral">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_content_body1"
                android:textColor="@color/color_brand_on_background"
                android:padding="@dimen/size_padding_md"
                android:text="Neutral"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>